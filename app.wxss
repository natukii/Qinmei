/**app.wxss**/
/**===Global===**/
@font-face {
	font-family: 'iconfont';  /* project id 1619274 */
	src: url('//at.alicdn.com/t/font_1619274_vtwrf5t0bo.eot');
	src: url('//at.alicdn.com/t/font_1619274_vtwrf5t0bo.eot?#iefix') format('embedded-opentype'),
	url('//at.alicdn.com/t/font_1619274_vtwrf5t0bo.woff2') format('woff2'),
	url('//at.alicdn.com/t/font_1619274_vtwrf5t0bo.woff') format('woff'),
	url('//at.alicdn.com/t/font_1619274_vtwrf5t0bo.ttf') format('truetype'),
	url('//at.alicdn.com/t/font_1619274_vtwrf5t0bo.svg#iconfont') format('svg');
}
.ntk-iconfont{
	font-family: "iconfont" !important;
	font-size: 1em;
	font-style: normal;
	-webkit-font-smoothing: antialiased;
	-webkit-text-stroke-width: 0.2px;
	-moz-osx-font-smoothing: grayscale;
}
.ntk-iconfont_home::before{
	content: "\e6b8";
}
.ntk-iconfont_search::before{
	content: "\e621";
}
.ntk-iconfont_new::before{
	content: "\e609";
}
/**==Primary-header==**/
.ntk-primary-header{
	width: 100%;
	display: flex;
	align-items: stretch;
	margin-bottom: 20rpx;
	padding: 15rpx 0;
	box-shadow: 0 0 3px 1px rgba(0,0,0,.1);
	box-sizing: border-box;
}
.ntk-primary-header .ntk-primary-header_profile{
	width: 10%;
	display: flex;
	justify-content: center;
	align-items: center;
	border-right: solid 1px #e6e6e6;
	box-sizing: border-box;
}
.ntk-primary-header .ntk-primary-header_profile .ntk-primary-header_avatar{
	width: 54rpx;
	height: 54rpx;
	border-radius: 50%;
	border: solid 2px #fff;
	box-shadow: 0 0 3px 1px rgba(0,0,0,.1);
}
.ntk-primary-header .ntk-primary-header_scroll-x{
	width: 80%;
	display: flex;
	align-items: center;
	box-sizing: border-box;
}
.ntk-primary-header .ntk-primary-header_nav{
	display: flex;
	align-items: center;
	white-space: nowrap;
}
.ntk-primary-header .ntk-primary-header_nav navigator{
	font-size: 24rpx;
	display: inline-block;
	margin: 0 15rpx;
}
.ntk-primary-header .ntk-primary-header_nav navigator:first-child{
	margin-left: 25rpx;
}
.ntk-primary-header .ntk-primary-header_nav navigator:last-child{
	margin-right: 25rpx;
}
.ntk-primary-header .ntk-primary-header_nav navigator .ntk-iconfont{
	font-size: 30rpx;
}
.ntk-primary-header .ntk-primary-header_nav .ntk-actived{
	color: #f08080!important;
}
.ntk-primary-header .ntk-primary-header_search
{
	width: 10%;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 30rpx;
}